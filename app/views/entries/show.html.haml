.form_buttons
  = link_to 'Edit', [:edit, @entry], :class => 'button btn-edit'
  = link_to 'Delete', @entry, :class => 'button btn-archive',
    :confirm => "Are you sure you want to destroy #{@entry.title}?", :method => :delete
  = link_to 'List', entries_path, :class => 'button btn-list'
  
.content_title_area
  .ct_left
    %h1= "Entry - #{@entry.title}"

%p
  Entry Type:
  %br
  = @entry.entry_type.name

%p
  Group:
  %br
  = @entry.group.name

%p  
  Status:
  %br
  = @entry.status.name